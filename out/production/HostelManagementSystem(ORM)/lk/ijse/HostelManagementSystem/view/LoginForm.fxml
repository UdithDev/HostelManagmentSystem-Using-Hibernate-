<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.HostelManagementSystem.Controller.LoginFormController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" layoutY="2.0" opacity="0.5" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/download.png" />
         </image>
      </ImageView>
      <JFXTextField fx:id="txtUserName" layoutX="175.0" layoutY="200.0" prefHeight="25.0" prefWidth="250.0" promptText="UserName*" />
      <JFXPasswordField fx:id="txtPassword" layoutX="175.0" layoutY="260.0" onAction="#passwordOnAction" prefHeight="25.0" prefWidth="250.0" promptText="Password*" />
      <Label layoutX="147.0" layoutY="20.0" text="Hostel Management System" textFill="#1346a4">
         <font>
            <Font name="Bell MT Bold" size="24.0" />
         </font>
      </Label>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="270.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/user.png" />
         </image>
      </ImageView>
      <JFXButton fx:id="btnLogin" layoutX="269.0" layoutY="307.0" onAction="#btnLoginOnAction" style="-fx-background-color: #569DAA;" text="Login" textFill="#144dc9">
         <font>
            <Font name="Bell MT Bold" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <ImageView fx:id="btnPasswordView" fitHeight="25.0" fitWidth="25.0" layoutX="400.0" layoutY="260.0" opacity="0.45" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/eye.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
